# MentraOS Configuration
PACKAGE_NAME=your-package-name
MENTRAOS_API_KEY=your-api-key-here

# Server Configuration
PORT=3000

# RTMP Streaming Configuration (Required for unmanaged streaming)
RTMP_SERVER_URL=rtmp://your-rtmp-server.com/live/stream-key

# Optional: Auto-start streaming when glasses connect
STREAM_AUTO_START=false

# Optional: Python backend URL (not used in streaming mode)
PYTHON_BACKEND_URL=http://127.0.0.1:8000